
<div class="container">

    <!-- ******************************************************** -->
    <!-- Main title and picture                                   -->
    <!-- ******************************************************** -->
    <div class="jumbotron">
        <div id="burger-image">
            <img class="center-block" src="/assets/images/burger.jpeg"></img>
        </div>
        <h1 class="text-center">Eat-Da-Burger!</h1>
    </div>
    
    <!-- ******************************************************** -->
    <!-- Side-by-side list of burgers to devour and that have     -->
    <!-- been devoured                                            -->
    <!-- ******************************************************** -->
    <div class="row">
        <div class="col-sm-6">
            <h4>Burgers Ready to Eat:</h4>
            <br>
            {{#each burgers}}
                {{#unless devoured}}
                    <span class="border border-primary" id="burger-list">
                        {{ id}}.
                        {{  burger_name}}
                    </span>
                    <button class="devour-burger" data-id="{{this.id}}">Devour It!</button>
                    <br><br>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-sm-6">
            <h4>Burgers That Have Been Devoured:</h4>
            <br>
            {{#each burgers}}
                {{#if devoured}}
                    <span class="border border-primary" id="burger-list">
                        {{ id}}.
                        {{  burger_name}}
                    </span>
                    <br><br>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <br><br>

    <!-- ******************************************************** -->
    <!-- Form for adding a new burger                             -->
    <!-- ******************************************************** -->
    <div class = "row">
        <div class="center col-sm-12">

            <form class="create-form">
                <div class="form-group">
                    <h5>Enter a burger you want to eat.</h5>
                    <br>
                    <input type="text" class="form-control" id="new-burger" name="name"></input><br>
                    <button type="submit" class="btn btn-primary addBurger">Submit</button><br>
                </div>
            </form>
        </div>
    </div>

</div>
