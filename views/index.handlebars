
<div class="container">

    <!-- ******************************************************** -->
    <!-- Main title and picture                                   -->
    <!-- ******************************************************** -->
    <div class="jumbotron">
        <div id="burger-image">
            <img src="/assets/images/eat-da-burger.jpg"></img>
        </div>
        <h1>Eat-Da-Burger!</h1>
    </div>
    
    <!-- ******************************************************** -->
    <!-- Side-by-side list of burgers to devour and that have     -->
    <!-- been devoured                                            -->
    <!-- ******************************************************** -->
    <div class="row">
        <div class="col-sm-6">
            {{#each burgers}}
                {{#unless devoured}}
                    <span class="border border-primary" id="burger-list">
                        {{ id}}.
                        {{  burger_name}}
                    </span>
                    <button class="devour-burger" data-id="{{this.id}}">Devour It!</button>
                    <br><br>
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-sm-6">
            {{#each burgers}}
                {{#if devoured}}
                    <span class="border border-primary" id="burger-list">
                        {{ id}}.
                        {{  burger_name}}
                    </span>
                    <br><br>
                {{/if}}
            {{/each}}
        </div>
    </div>

    <!-- ******************************************************** -->
    <!-- Form for adding a new burger                             -->
    <!-- ******************************************************** -->
    <form class="create-form">
        <div class="form-group">
            <input type="text" class="form-control" id="new-burger" name="name"></input><br>
            <button type="submit" class="btn btn-primary addBurger">Submit</button><br>
            <br>
            <h5>Enter a burger you want to eat.</h5>
        </div>
    </form>
</div>


